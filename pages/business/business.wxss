.navBar {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  background-color: #fff;
}

.navBar-slide-scroll {
  background-color: #fff;
  white-space: nowrap;
  width: 700rpx;
}

.nav-more {
  width: 50rpx;
}

.nav-more icon {
  margin: 20rpx auto 0 5rpx;
}

.navBar-item {
  display: inline-block;
  margin-right: 30rpx;
  cursor: pointer;
}

.navBar-item:first-child {
  margin-left: 20rpx;
}

.navBar-overall {
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 999;
}

.navBar-overall-container {
  width: 750rpx;
  background-color: #fff;
}

.navBar-overall-header {
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  overflow: hidden;
  font-size: 28rpx;
  padding: 20rpx 20rpx 0 20rpx;
}

.navBar-overall-header .title {
  height: 50rpx;
  line-height: 50rpx;
}

.close {
  height: 50rpx;
  line-height: 50rpx;
}

.navBar-overall-content {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.navBar-overall-item {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #ddd;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.navBar-overall-item:not(:nth-child(4n+0)) {
  margin-right: 15rpx;
}

.business-list {
  margin-top: 80rpx;
}

.business-item-one {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 20rpx;
}

.business-one-info {
  display: flex;
  flex-direction: column;
  width: 440rpx;
}

.business-tag-comment-date {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.business-tag {
  background-color: #666;
  color: #fff;
  padding: 5rpx 15rpx;
  font-size: 20rpx;
  border-radius: 5rpx;
  vertical-align: middle;
}

.business-comment {
  margin-left: 35rpx;
}

.business-comment text {
  font-size: 25rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}

.business-date {
  margin-left: 28rpx;
}

.business-date text {
  font-size: 25rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}

.business-tag-comment-date image {
  width: 32rpx;
  height: 32rpx;
  background-color: #ddd;
  vertical-align: middle;
}

.business-one-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  font-size: 30rpx;
}

.business-one-cover {
  width: 260rpx;
  height: 150rpx;
  background-color: #ddd;
}

.business-item-three {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 20rpx;
}

.business-three-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.business-three-img {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}

.business-three-img image {
  width: 220rpx;
  height: 160rpx;
  background-color: #ddd;
}

.business-three-img image:not(:last-child) {
  margin-right: 20rpx;
}

@import "../../template/business-item/business-item-template.wxss";
@import "../../template/comment-item/comment-item-template.wxss";

page {
  background-color: #f0f0f0;
}

.container {
  display: flex;
  flex-direction: column;
}

.article {
  background-color: #fff;
}

.article .article-title {
  margin: 15rpx 30rpx 0 30rpx;
  font-size: 20px;
  color: #101010;
}

.article .article-author-date {
  margin-left: 30rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #101010;
}

.article .article-date {
  margin-left: 20rpx;
}

.article .article-content {
  margin: 15rpx 30rpx 0 30rpx;
  font-size: 28rpx;
  letter-spacing: 1rpx;
  word-break: break-all;
  line-height: 40rpx;
  padding-bottom: 20rpx;
}

.article .article-content image {
  width: 100%;
  height: 400rpx;
  background-color: #ddd;
  margin: 20rpx 0;
}

.comment {
  margin-top: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
}

.comment-title {
  font-size: 28rpx;
  color: #101010;
  font-weight: bold;
  text-align: center;
  padding-top: 20rpx;
}

.comment-list {
  margin-top: 30rpx;
}



.more-comment-btn {
  margin: 0 auto;
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1px solid #e11414;
  font-size: 24rpx;
  color: #e11414;
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.recommend {
  margin-top: 40rpx;
  background-color: #fff;
  margin-bottom: 150rpx;
}

.recommend-title {
  text-align: center;
  font-size: 28rpx;
  color: #101010;
  font-weight: bold;
  padding-top: 20rpx;
}

.recommend-content {
  margin-top: 30rpx;
}

.navBar {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  width: 100%;
  background-color: #ddd;
  display: flex;
  flex-direction: row;
}

.navBar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.navBar-icon {
  height: 48rpx;
  width: 48rpx;
  background-color: #e11414;
  margin-top: 20rpx;
}

.navBar-text {
  margin-top: 10rpx;
  font-size: 24rpx;
}

page {
  background-color: #f0f0f0;
}

.container {
  position: relative;
  width: 100%;
  background-color: #fff;
  color: #939393;
}

.category-search-container {
  padding: 7px 10px;
  border-bottom: 1px solid #d8d8d8;
  width: 100%;
  box-sizing: border-box;
}

.category-search-box {
  height: 30px;
  background-color: #d8d8d8;
  text-align: center;
  line-height: 30px;
  border-radius: 5rpx;
}

.category-box {
  position: relative;
  overflow: hidden;
}

.left-box {
  display: inline-block;
  width: 150rpx;
  height: 100%;
  background: #f5f5f5;
}

.left-box .menu_item {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 26rpx;
  text-align: center;
}

.left-box .menu_item.active {
  background: #fff;
  color: #ff4a4a;
  position: relative;
}

.left-box .menu_item.active::before {
  display: block;
  content: "";
  background-color: #ff4a4a;
  width: 2px;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
  left: 0;
}

/*右侧栏主盒子*/

.right-box {
  display: inline-block;
  height: 100%;
  width: 600rpx;
  padding: 14rpx;
  box-sizing: border-box;
  /* background: #fff; */
  background-color: #f0f0f0;
  position: absolute;
}

.category-detail-box {
  display: flex;
  flex-direction: column;
  height: auto;
}

.category-detail-special {
  width: 600prx;
  height: 200rpx;
}

.category-detail-special image {
  width: 100%;
  height: 100%;
}

.category-detail-content {
  margin-top: 10rpx;
  background-color: #fff;
}

.category-detail-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.category-detail-header .class {
  font-size: 28rpx;
  margin: 10rpx auto 0 10rpx;
}

.category-detail-header .rank {
  font-size: 28rpx;
  margin: 10rpx 10rpx 0 auto;
}

.category-detail-main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.category-detail-item {
  text-align: center;
  display: flex;
  flex-direction: column;
  width: 190rpx;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
}

.category-detail-item image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  background-color: #d8d8d8;
}

.category-detail-item text {
  font-size: 28rpx;
  padding-top: 10rpx;
}
